<Window x:Class="HealthIdentifiers.Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:HealthIdentifiers.Tool.View.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Health Identifier tool"
        Height="600" MinHeight="600" MaxHeight="600"
        Width="450" MinWidth="450" MaxWidth="450" 
        d:DataContext="{d:DesignInstance }">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        
        <!-- <Rectangle Grid.Row="0" Grid.Column="0" Fill="Gray"></Rectangle> -->
        
        <UserControls:IdentifierSelector Grid.Row="0" Margin="10,0,0,0"/>

        <UserControls:IdentifierValue Grid.Row="1" ValueText="{Binding Path=SelectedIdentifier.Value}"/>

        <UserControls:IdentifierComponents Grid.Row="2"/>
        
    </Grid>
</Window>