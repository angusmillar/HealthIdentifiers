<UserControl x:Class="HealthIdentifiers.Tool.View.UserControls.ValuePair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HealthIdentifiers.Tool.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="440">

    <StackPanel x:Name="LayoutRoot" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
        <Label Content="{Binding Path=ValueName}" Width="200" FontSize="16" FontWeight="Regular" ></Label>
        <Label Content="{Binding Path=Value}" FontSize="16" FontWeight="Light"></Label>
    </StackPanel>
    
</UserControl>