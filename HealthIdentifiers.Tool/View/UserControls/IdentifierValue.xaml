<UserControl x:Class="HealthIdentifiers.Tool.View.UserControls.IdentifierValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HealthIdentifiers.Tool.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="450">
    
    <GroupBox Grid.Row="1" Margin="10,0,10,0" FontSize="16" FontWeight="Light" Header="Identifier value">
        <StackPanel Orientation="Vertical">
            <Grid>
                <TextBox BorderThickness="3" BorderBrush="LimeGreen" Margin="5" Height="30" FontSize="16"
                         FontWeight="Light" TextAlignment="Center"
                         VerticalContentAlignment="Center">
                </TextBox>
                <TextBlock Foreground="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Paste value..." FontSize="16" FontWeight="Light"></TextBlock>    
            </Grid>
            <Button Margin="5,5,5,10">Generate Random</Button>
        </StackPanel>
    </GroupBox>
    
</UserControl>